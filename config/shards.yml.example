defaults: &defaults
  adapter: postgresql
  encoding: unicode
  pool: 5
  timeout: 5000
  port: 5432

production:
  master:
    database: master_database_<%= ENV['TEST_ENV_NUMBER'] %>
    host: localhost
    username: <%= ENV['PG_USER'] %>
    password: <%= ENV['PG_PASSWORD'] %>
    <<: *defaults

test:
  master:
    database: master_database_test_<%= ENV['TEST_ENV_NUMBER'] %>
    host: localhost
    username: <%= ENV['PG_USER'] %>
    password: <%= ENV['PG_PASSWORD'] %>
    <<: *defaults

